{
  "name": "next-limitr",
  "version": "0.1.0",
  "description": "A simple and effective rate limiting and alerting package for Next.js",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest --config=jest.config.cjs",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "release": "npm run build && npm run test && npm publish"
  },
  "keywords": [
    "next.js",
    "middleware",
    "rate-limiting",
    "alerting",
    "api"
  ],
  "author": "Patrick Jakobsen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pallepadehat/next-limitr.git"
  },
  "homepage": "https://github.com/pallepadehat/next-limitr",
  "bugs": {
    "url": "https://github.com/pallepadehat/next-limitr/issues"
  },
  "sideEffects": false,
  "peerDependencies": {
    "next": ">=12.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.27.0",
    "@types/jest": "^29.5.14",
    "@types/ms": "^0.7.31",
    "@types/node": "^18.19.86",
    "@types/react": "^18.3.20",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "next": "^15.3.0",
    "prettier": "^2.8.8",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "ts-jest": "^29.3.2",
    "tsup": "^6.7.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "ms": "^2.1.3"
  }
}
